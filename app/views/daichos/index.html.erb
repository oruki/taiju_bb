    <td colspan=5><%=h daicho.desc3 %></td>
    <td colspan=6><%=h daicho.desc3 %></td>
    <td colspan=1><%= link_to image_tag("show.gif", :border=>0), daicho %></td>
    <td colspan=1><%= link_to image_tag("edit.gif", :border=>0), edit_daicho_path(daicho) %></td>
  </tr>
<% end %>
