  <tr>
    <td colspan= 32 style = "text-align:right; ">
      レコード件数：<%= @daichos.size %>件 &nbsp;&nbsp;&nbsp;
      <%= link_to '新規登録', new_daicho_path %>
    </td>
  </tr>
  <tr>
    <% 32.times do %>
      <td></td>
    <% end %>
  </tr>
  <tr>
    <th colspan=9>児童名／入所／退所</td>
