<% unless @errors.blank? %>
  <ul>
  <% for error in @errors %>
    <li><p><%= h(error) %></p></li>
  <% end %>
  </ul>
<% end %>

<% form_tag(:action => :calculate) do %>
  <%= text_field_tag(:arg1, params[:arg1], :size => 3) %>
  <%= select_tag(:operator,
                options_for_select(%w{ + - * / },
                params[:operator])) %>
  <%= text_field_tag(:arg2, params[:arg2], :size => 3) %>
  <%= submit_tag %>

<% end %>

<strong>&#32080;&#26524;&#65306;<%= @result %></strong>