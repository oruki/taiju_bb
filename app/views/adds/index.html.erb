<h1>Listing adds</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Name</th>
    <th>Misc</th>
  </tr>

<% for add in @adds %>
  <tr>
    <td><%=h add.address %></td>
    <td><%=h add.name %></td>
    <td><%=h add.misc %></td>
    <td><%= link_to 'Show', add %></td>
    <td><%= link_to 'Edit', edit_add_path(add) %></td>
    <td><%= link_to 'Destroy', add, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

