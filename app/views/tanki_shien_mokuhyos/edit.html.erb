<TABLE ID="TITLE" CLASS="fix">
  <tr>
    <td> 短期支援目標（一覧）</td>
  </tr>  
</TABLE>

<TABLE ID="menu2" CLASS="part">
<tr>
  <td style="text-align:right; ">
    <span style="margin-right:25px">レコード件数：<%#= @tanki_shien_mokuhyo.size %></span>
    <%= link_to '新規登録', new_tanki_shien_mokuhyo_path %>｜<%= link_to '一覧', tanki_shien_mokuhyos_path %>
  </td>
</tr>
</TABLE>

<% form_for(@tanki_shien_mokuhyo) do |f| %>
  <%= f.error_messages %>
<table ID="menu2" CLASS="part">
  <tr>
    <% 32.times do %>
      <td></td>
    <% end %>
  </tr>
  <tr>
    <td colspan=32>
      <%= f.text_field :shien_keikaku_id %><%= f.date_select :date %><%= f.submit "Update" %>
    </td>
  </tr>  
  <tr>
    <th colspan=8>支援上の課題</th>
    <th colspan=8>支援目標</th>
    <th colspan=8>支援内容・方法</th>
    <th colspan=8>評価・期日</th>    
  </tr>

  <tr>
    <td colspan=8>
      <%= f.text_area :kadai, :cols => "18", :rows => 6 %>
    </td>
    <td colspan=8>
      <%= f.text_area :mokuhyo, :cols => "18", :rows => 6 %>
    </td>    
    <td colspan=8>
      <%= f.text_area :naiyou, :cols => "18", :rows => 6 %>
    </td>    
    <td colspan=8>
      <%= f.text_area :hyoka, :cols => "18", :rows => 6 %><br>
      
    </td>       
  </tr>

</table>

<% end %>