<TABLE ID="TITLE" CLASS="fix">
  <tr>
    <td>指導員日誌（一覧）</td>
  </tr>  
</TABLE>

<TABLE ID="menu2" CLASS="part">
<tr>
  <td style="text-align:right; ">
    <%= link_to '新規登録', new_staff_rec_path %>|
    <%= link_to '一 覧', staff_recs_path %>
  </td>
</tr>
</TABLE>

<TABLE ID="menu2" CLASS="part">
  <tr>
  <% 32.times do %>
    <td></td>
  <% end %>
  </tr>
  <tr>
    <th colspan=5>時間</th>
    <th colspan=5>勤務日誌ID</th>
    <th colspan=5>指導員氏名</th>
    <th colspan=5>外出</th>
    <th colspan=6>用件</th>
    <th colspan=6>内容</th>
  </tr>

<% for staff_rec in @staff_recs %>
  <tr>
    <td colspan=5><%=h staff_rec.time.strftime("%I:%M") %></td>
    <td colspan=5><%=h staff_rec.attend_id %></td>
    <td colspan=5><%=h staff_rec.attend.staff.name if staff_rec.attend %></td>
    <td colspan=5><%=h staff_rec.in_out %></td>
    <td colspan=6><%=h staff_rec.yoken %></td>
    <td colspan=4><%=h staff_rec.naiyo %></td>
    <td colspan=1><%= link_to 'E', edit_staff_rec_path(staff_rec) %></td>
    <td colspan=1><%= link_to 'D', staff_rec, :confirm => '本当に削除してよいですか?', :method => :delete %></td>
  </tr>
<% end %>
</table>