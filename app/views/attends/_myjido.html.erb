<TABLE width="100%" ID="menu1" CLASS="part"> 
  <tr>
    <th colspan=6>名前</th>      <!-- 0 -->
    <th colspan=3>生活</th>      <!-- 1 -->
    <th colspan=3>学校</th>      <!-- 2 -->
    <th colspan=3>医療</th>      <!-- 3 -->
    <th colspan=3>外泊</th>      <!-- 4 -->
    <th colspan=4>ｸﾞﾙｰﾌﾟ</th>    <!-- 5 -->
  </tr>
<!-- myjido is @boysincharge5 which is @boys selected and mapped in attends_controller.rb -->
<% for jido in myjido %>
  <tr>
    <td colspan=6><%=h jido[0] %></td>
    <td colspan=3>
      <% if jido[1]=='-' %>    
        <%= link_to image_tag ("action_add.gif", :border=>0), { :controller => "shidou_recs", :action => "new", :date => @attend.time_start.to_date, :boy_id => jido[6]},
            :title => "新規：指導記録" %>
      <% else %>
        <%= link_to( jido[1][0].cat+jido[1].size.to_s, {:controller => "shidou_recs", :action => "edit", :boy_id =>jido[6], :id => jido[1][0]},
            :title => "作成者：#{jido[1][0].staff.name}" ) %>
      <% end %>                       
    </td>    
    <td colspan=3>
      <% if jido[2]=='-' %>      
        <%= link_to image_tag ("action_add.gif", :border=>0), { :controller => "school_recs", :action => "new", :date => @attend.time_start.to_date, :boy_id => jido[6]},
            :title => "新規：学校記録" %>
      <% else %>
        <%= link_to( jido[2][0].status+jido[1].size.to_s, {:controller => "school_recs", :action => "edit", :boy_id =>jido[6], :id => jido[2][0]},
            :title => "作成者：#{jido[2][0].staff.name}" ) %>
      <% end %>  
    </td>
    <td colspan=3>
      <% if jido[3]=='-' %>
        <%= link_to image_tag ("action_add.gif", :border=>0), { :controller => "med_recs", :action => "new", :date => @attend.time_start.to_date, :boy_id => jido[6]},
            :title => "新規：医療記録" %>
      <% else %>
        <%= link_to( jido[3][0].symptom+jido[1].size.to_s, {:controller => "med_recs", :action => "edit",  :boy_id =>jido[6], :id => jido[3][0]},
            :title => "作成者：#{jido[3][0].staff.name}" ) %>
      <% end %>     
    </td>
    <td colspan=3>
      <% if jido[4]=='-' %>
        <%= link_to image_tag ("action_add.gif", :border=>0), { :controller => "stay_out_recs", :action => "new", :date => @attend.time_start.to_date, :boy_id => jido[6]},
            :title => "NEW：面接・外泊記録" %>
      <% else %>
        <%= link_to( jido[4][0].case_category+jido[1].size.to_s , {:controller => "stay_out_recs", :action => "edit",  :boy_id =>jido[6], :id => jido[4][0]},
            :title => "作成者：#{jido[4][0].staff.name}" ) %>
      <% end %>
    </td>     
    <td colspan=4><%=h jido[5] %>
    </td>    
  </tr>
<% end %>
</TABLE>